<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/video_model_adapter_card_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="3dip"
    android:padding= "5dp"
    android:orientation="vertical"
   >
 <ImageView
     android:id="@+id/video_model_adapter_card_image"
     android:layout_width="match_parent"
     android:layout_height="0dp"
     android:layout_weight="20"
     android:scaleType="fitXY"
     android:src="@mipmap/ic_launcher"
     />
    <TextView
        android:id="@+id/video_model_adapter_card_display_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:text="Sample Video.mp4"
        android:autoSizeTextType="uniform"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/video_model_adapter_card_duration"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:text="5:41"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        />


</LinearLayout>