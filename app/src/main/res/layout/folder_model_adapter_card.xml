<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/folder_model_adapter_card_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="3dip"
    android:padding= "5dp"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/folder_model_adapter_card_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"
        android:src="@drawable/foldericon"
        />
    <TextView
        android:id="@+id/folder_model_adapter_card_folder_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center"
        android:autoSizeTextType="uniform"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/folder_model_adapter_card_count"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:text="5 videos"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        />


</LinearLayout>